/**
 * Firestore Security Rules
 * Role-based access control for all collections
 * 
 * Rules ensure:
 * - Tenants can only access their own maintenance requests
 * - Contractors can only read assigned jobs
 * - Landlords can access requests for their properties
 * - Admins have full access
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user role from custom claims
    function getUserRole() {
      return request.auth.token.role;
    }
    
    // Helper function to check if user has required role
    function hasRole(role) {
      return getUserRole() == role;
    }
    
    // Helper function to check if user has any of the required roles
    function hasAnyRole(roles) {
      return getUserRole() in roles;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Maintenance Requests Collection
    match /maintenanceRequests/{requestId} {
      // Helper to check if user is tenant (from custom claims or user document)
      function isTenant() {
        return getUserRole() == 'tenant' 
          || (request.auth != null && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'tenant');
      }
      
      // Helper to check if user is landlord (from custom claims or user document)
      function isLandlord() {
        return getUserRole() == 'landlord'
          || (request.auth != null && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'landlord');
      }
      
      // Allow read if:
      // - User is admin
      // - User is tenant and request belongs to them OR belongs to same property
      // - User is landlord and either landlordId matches or property belongs to them
      // - User is contractor and request is assigned to them
      allow read: if isAdmin() 
        || (isTenant() && (
          resource.data.tenantId == request.auth.uid
          || (resource.data.propertyId != null && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.propertyId == resource.data.propertyId)
        ))
        || (isLandlord() && (
          resource.data.landlordId == request.auth.uid
          || (resource.data.propertyId != null &&
              exists(/databases/$(database)/documents/properties/$(resource.data.propertyId)) &&
              get(/databases/$(database)/documents/properties/$(resource.data.propertyId)).data.landlordId == request.auth.uid)
        ))
        || (hasRole('contractor') && resource.data.contractorId == request.auth.uid);
      
          // Allow create if:
          // - User is admin
          // - User is tenant (can create their own requests) - check both custom claims and user document
          // - User is landlord and sets themselves as landlordId
          allow create: if isAdmin() 
            || (isTenant() && request.resource.data.tenantId == request.auth.uid)
            || (isLandlord() && request.resource.data.landlordId == request.auth.uid);
      
      // Allow update if:
      // - User is admin
      // - User is landlord on the request (existing or incoming data)
      // - User is landlord of the property (if propertyId is present)
      // - User is contractor assigned to the request
      allow update: if isAdmin()
        || (request.auth != null && (
            resource.data.landlordId == request.auth.uid
            || request.resource.data.landlordId == request.auth.uid
            || (
              resource.data.propertyId != null
              && exists(/databases/$(database)/documents/properties/$(resource.data.propertyId))
              && get(/databases/$(database)/documents/properties/$(resource.data.propertyId)).data.landlordId == request.auth.uid
            )
          ))
        || (hasRole('contractor') && resource.data.contractorId == request.auth.uid);
      
      // Allow delete if:
      // - User is admin only
      allow delete: if isAdmin();
    }
    
    // Chat Rooms Collection
    match /rooms/{roomId} {
      // Allow read if:
      // - User is admin
      // - User is a member of the room
      allow read: if isAdmin() 
        || request.auth.uid in resource.data.members;
      
      // Allow create if:
      // - User is admin
      // - User is creating a room and is included in members
      allow create: if isAdmin()
        || request.auth.uid in request.resource.data.members;
      
      // Allow update if:
      // - User is admin
      // - User is a member (can add other members)
      allow update: if isAdmin()
        || request.auth.uid in resource.data.members;
      
      // Allow delete if:
      // - User is admin only
      allow delete: if isAdmin();
      
      // Messages Subcollection
      match /messages/{messageId} {
        // Allow read if:
        // - User is admin
        // - User is a member of the parent room
        allow read: if isAdmin() 
          || request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
        
        // Allow create if:
        // - User is admin
        // - User is a member of the parent room
        allow create: if isAdmin()
          || request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
        
        // Allow update if:
        // - User is admin
        // - User is the sender (can edit own messages)
        allow update: if isAdmin()
          || resource.data.senderId == request.auth.uid;
        
        // Allow delete if:
        // - User is admin
        // - User is the sender (can delete own messages)
        allow delete: if isAdmin()
          || resource.data.senderId == request.auth.uid;
      }
    }
    
    // Properties Collection
    match /properties/{propertyId} {
      // Helper to check if user is tenant (from custom claims or user document)
      function isTenant() {
        return getUserRole() == 'tenant' 
          || (request.auth != null && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'tenant');
      }
      
      // Helper to check if tenant is assigned to this property
      function tenantAssignedToProperty() {
        return isTenant() && (
          request.auth.uid in resource.data.tenantIds
          || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.propertyId == resource.data.propertyId)
        );
      }
      
      // Allow read if:
      // - User is admin
      // - User is landlord and owns the property
      // - User is tenant and lives in the property (check both tenantIds array and user document propertyId)
      allow read: if isAdmin()
        || (hasRole('landlord') && resource.data.landlordId == request.auth.uid)
        // Fallback: allow landlords by UID even if role claim missing
        || (request.auth != null && resource.data.landlordId == request.auth.uid)
        || tenantAssignedToProperty();
      
      // Allow create if:
      // - User is admin
      // - User is landlord (from custom claims) and is setting themselves as the landlord
      // - OR user is authenticated and setting themselves as landlord (fallback if role not in claims)
      //   AND user document exists with landlord role
      // - OR user is authenticated and setting themselves as landlord (most permissive - let app handle role check)
      // Note: The most permissive rule is last - any authenticated user can create a property
      // where they set themselves as landlord. The app should verify roles.
      allow create: if isAdmin()
        || (hasRole('landlord') && request.resource.data.landlordId == request.auth.uid)
        || (request.auth != null 
            && request.resource.data.landlordId == request.auth.uid
            && exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'landlord')
        || (request.auth != null && request.resource.data.landlordId == request.auth.uid);
      
      // Allow update if:
      // - User is admin
      // - User is landlord and owns the property
      allow update: if isAdmin()
        || (hasRole('landlord') && resource.data.landlordId == request.auth.uid)
        // Fallback: allow landlord by UID even if role claim/document missing
        || (request.auth != null && resource.data.landlordId == request.auth.uid);
      
      // Allow delete if:
      // - User is admin
      // - User is landlord and owns the property
      allow delete: if isAdmin()
        || (hasRole('landlord') && resource.data.landlordId == request.auth.uid)
        // Fallback: allow landlord by UID even if role claim/document missing
        || (request.auth != null && resource.data.landlordId == request.auth.uid);
    }
    
    // Users Collection (if you store user profiles)
    match /users/{userId} {
      // Helper to check if user is tenant (from custom claims or user document)
      function isTenant() {
        return getUserRole() == 'tenant' 
          || (request.auth != null && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'tenant');
      }
      
      // Helper to check if user is landlord (from custom claims or user document)
      function isLandlord() {
        return getUserRole() == 'landlord'
          || (request.auth != null && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'landlord');
      }
      
      // Helper to check if tenant shares the same property as the requested user
      function sharesSameProperty() {
        return isTenant() 
          && exists(/databases/$(database)/documents/users/$(request.auth.uid))
          && exists(/databases/$(database)/documents/users/$(userId))
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.propertyId != null
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.propertyId == 
             get(/databases/$(database)/documents/users/$(userId)).data.propertyId;
      }
      
      // Helper to check if the requested user is the tenant's landlord
      function isTenantsLandlord() {
        return isTenant() 
          && exists(/databases/$(database)/documents/users/$(request.auth.uid))
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.landlordId == userId;
      }
      
      // Users can read their own profile
      // Admins can read all profiles
      // Landlords can read profiles of their tenants
      // Landlords can read contractor profiles (for assigning to maintenance requests)
      // Landlords can read tenants of properties they own (even if tenant doc missing landlordId)
      // Tenants can read profiles of other tenants in the same property (for messaging)
      // Tenants can read their landlord's profile (for messaging)
      // Tenants can read contractor profiles (to display contractor name/email when assigned)
      allow read: if isAdmin() 
        || request.auth.uid == userId
        || (isLandlord() && resource.data.landlordId == request.auth.uid)
        || (isLandlord() && resource.data.role == 'contractor')
        || (isLandlord()
            && resource.data.role == 'tenant'
            && resource.data.propertyId != null
            && exists(/databases/$(database)/documents/properties/$(resource.data.propertyId))
            && get(/databases/$(database)/documents/properties/$(resource.data.propertyId)).data.landlordId == request.auth.uid)
        || (isTenant() && resource.data.role == 'contractor')
        || sharesSameProperty()
        || isTenantsLandlord();
      
      // Users can update their own profile
      // Admins can update any profile
      // Landlords can update their tenant profiles (for adding to properties)
      allow update: if isAdmin() 
        || request.auth.uid == userId
        || (isLandlord() && resource.data.landlordId == request.auth.uid);
      
      // Users can create their own profile (during signup or when needed)
      // Admins can create any profile
      // Allow users to create their own profile even if it doesn't exist yet
      allow create: if isAdmin() 
        || request.auth.uid == userId
        || (request.auth != null && request.auth.uid == userId);
      
      // Only admins can delete user profiles
      allow delete: if isAdmin();
    }
    
    // Invites Collection
    match /invites/{inviteId} {
      // Helper to check if user is tenant (from custom claims or user document)
      function isTenant() {
        return getUserRole() == 'tenant' 
          || (request.auth != null && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'tenant');
      }
      
      // Allow read if:
      // - User is admin
      // - User is landlord and sent the invite
      // - User is tenant (check both custom claims and user document)
      // Note: We allow all tenants to read invites, then filter client-side by email
      // This is more permissive but ensures invites are visible
      allow read: if isAdmin()
        || (hasRole('landlord') && resource.data.landlordId == request.auth.uid)
        // Fallback: allow landlord by UID even if role claim missing
        || (request.auth != null && resource.data.landlordId == request.auth.uid)
        || isTenant();
      
      // Allow create if:
      // - User is admin
      // - User is landlord (can send invites)
      allow create: if isAdmin()
        || (hasRole('landlord') && request.resource.data.landlordId == request.auth.uid)
        // Fallback: allow landlord by UID even if role claim missing
        || (request.auth != null && request.resource.data.landlordId == request.auth.uid);
      
      // Allow update if:
      // - User is admin
      // - User is tenant (can accept/decline - app verifies email match)
      // - User is landlord updating their own invite
      allow update: if isAdmin()
        || isTenant()
        || (hasRole('landlord') && resource.data.landlordId == request.auth.uid)
        // Fallback: allow landlord by UID even if role claim missing
        || (request.auth != null && resource.data.landlordId == request.auth.uid);
      
      // Allow delete if:
      // - User is admin
      // - User is landlord who sent the invite
      allow delete: if isAdmin()
        || (hasRole('landlord') && resource.data.landlordId == request.auth.uid)
        // Fallback: allow landlord by UID even if role claim missing
        || (request.auth != null && resource.data.landlordId == request.auth.uid);
    }
  }
}

